{
  "name": "polen",
  "version": "0.0.6",
  "type": "module",
  "description": "A framework for delightful GraphQL developer portals",
  "author": {
    "name": "Jason Kuhrt",
    "url": "https://kuhrt.me"
  },
  "bugs": {
    "url": "https://github.com/the-guild-org/polen/issues"
  },
  "keywords": [
    "graphql",
    "polen",
    "pollen",
    "developer portal",
    "api",
    "docs",
    "reference"
  ],
  "license": "MIT",
  "scripts": {
    "examples:unlink": "rm -rf examples/{basic,github}/pnpm-workspace.yaml && git checkout examples/*/pnpm-lock.yaml",
    "test:examples": "playwright test --config 'examples/_tests/playwright.config.ts'",
    "test:integration": "playwright test --config 'tests/integration/playwright.config.ts'",
    "test:unit": "vitest",
    "dev": "pnpm build:watch:emit",
    "build:clean": "tsc --build tsconfig.build.json --clean && rm -rf build",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build tsconfig.build.json --watch",
    "build:watch:emit": "tsc --build tsconfig.build.json --watch --nocheck",
    "build:emit": "tsc --build tsconfig.build.json --noCheck",
    "prebuild": "pnpm pnpm build:clean",
    "fix": "pnpm fix:lint && pnpm fix:format",
    "fix:lint": "eslint . --fix",
    "fix:format": "dprint fmt",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:types && pnpm check:package",
    "check:format": "dprint check",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "check:package": "publint run --strict",
    "release:version": "changeset version && git commit -am \"chore: release\" && git push",
    "prepublishOnly": "pnpm build",
    "project:example-controller": "tsx ./scripts/example-controller.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-guild-org/polen.git"
  },
  "exports": {
    ".": "./build/exports/index.js",
    "./exports": "./build/exports/polen.js",
    "./dependencies/react/jsx-runtime": "./build/exports/dependencies/react/jsx-runtime.js",
    "./dependencies/react/jsx-dev-runtime": "./build/exports/dependencies/react/jsx-dev-runtime.js",
    "./dependencies/react": "./build/exports/dependencies/react.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/vite-dev-server": "^0.19.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "es-toolkit": "^1.36.0",
    "fuse.js": "^7.1.0",
    "graphql": "^16.11.0",
    "hono": "^4.7.8",
    "marked": "^15.0.11",
    "playwright": "1.52.0",
    "react-router": "^7.5.3",
    "tinyglobby": "^0.2.13",
    "zx": "8.4.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@eslint/js": "^9.25.1",
    "@molt/command": "^0.9.0",
    "@playwright/browser-chromium": "^1.52.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tsconfig/node22": "^22.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "dprint": "^0.49.1",
    "dripip": "^0.10.0",
    "eslint": "^9.25.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "fs-jetpack": "^5.1.0",
    "get-port-please": "^3.1.2",
    "globals": "^16.0.0",
    "publint": "^0.3.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "strip-ansi": "^7.1.0",
    "tsx": "^4.19.4",
    "type-fest": "^4.40.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "zod": "^3.24.3"
  },
  "packageManager": "pnpm@10.10.0",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.2.5"
  }
}
