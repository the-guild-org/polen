{
  "name": "polen",
  "version": "0.0.5",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:watch:emit": "tsc --watch --nocheck",
    "build:emit": "tsc --noCheck",
    "fix": "pnpm fix:lint && pnpm fix:format",
    "fix:lint": "eslint . --fix",
    "fix:format": "dprint fmt",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:types && pnpm check:publint",
    "check:format": "dprint check",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "check:publint": "publint run --strict",
    "release:version": "changeset version && git commit -am \"chore: release\" && git push",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/the-guild-org/polen.git"
  },
  "exports": {
    ".": "./build/_namespace.js",
    "./exports": "./build/_exports.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/vite-dev-server": "^0.19.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "es-toolkit": "^1.34.1",
    "fuse.js": "^7.1.0",
    "graphql": "^16.10.0",
    "hono": "^4.7.5",
    "marked": "^15.0.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.3.4",
    "dripip": "^0.10.0",
    "eslint": "^9.24.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "publint": "^0.3.10",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4",
