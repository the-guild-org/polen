// @libra
{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    // Package
    "module": "nodenext",
    "moduleResolution": "nodenext",

    // Output
    "verbatimModuleSyntax": true,

    // DX
    "moduleDetection": "force",
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo",
    "noErrorTruncation": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#*": ["./src/*.ts"],
      "#lib/mask": ["./src/lib/mask/$.ts"],
      "#lib/mask/*": ["./src/lib/mask/*.ts"],
      "#lib/deployment": ["./src/lib/deployment/$.ts"],
      "#lib/deployment/*": ["./src/lib/deployment/*.ts"],
      "#lib/task": ["./src/lib/task/$.ts"],
      "#lib/task/*": ["./src/lib/task/*.ts"],
      "#lib/github-actions": ["./src/lib/github-actions/$.ts"],
      "#lib/github-actions/*": ["./src/lib/github-actions/*.ts"]
    },

    // DX covered by ESLint:
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // DX for Downstream
    "isolatedModules": true, // performance
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["build", "eslint.config.js"]
}
