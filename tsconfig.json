{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2022",
    "module": "NodeNext",
    "exactOptionalPropertyTypes": false,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "outDir": "build",
    "declaration": true,
    "noEmit": true,
    // Rely on ESLint for unused variables
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["eslint.config.js", "build"],
  "include": ["tests", "src", "vite-env.d.ts", "global.d.ts", "examples/_tests", "scripts"]
}
