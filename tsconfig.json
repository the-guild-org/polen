{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2022",
    "module": "NodeNext",
    "exactOptionalPropertyTypes": false,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "build",
    "declaration": true
  },
  "exclude": ["./eslint.config.js", "build"],
  "include": ["src", "vite-env.d.ts"]
}
